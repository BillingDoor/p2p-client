{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@models": ["models"],
      "@models*": ["models*"],
      "@layers*": ["layers*"],
      "@utils*": ["utils*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/ramda/index.d.ts"
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
